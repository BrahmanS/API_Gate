<odoo>
   <template id="layout_ipmi" inherit_id="website.layout" name="IPMI Layout">
        <xpath expr="//head" position="inside">
            <!-- Bootstrap CSS -->
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-pzjw8f+ua7Kw1T4gp2I5t9eOfrgxfNw4G2kDJRfX2J8yDI28XrA3lXJ6suey4eGJ" crossorigin="anonymous"/>
        </xpath>

        <xpath expr="//header" position="replace">
            <!-- Navigation Bar -->
            <header class="o_header_standard">
                <nav class="navbar navbar-expand-lg navbar-light bg-white">
                    <div class="container">
                        <a class="navbar-brand" href="/">
                            <img src="/ipmi/static/src/img/ipmi_logo.png" alt="IPMI Institute" width="150" />
                        </a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav ml-auto">
                                <li class="nav-item"><a class="nav-link" href="/admission">Admission</a></li>
                                <li class="nav-item"><a class="nav-link" href="/programs">Programs</a></li>
                                <li class="nav-item"><a class="nav-link" href="/research">Research</a></li>
                                <li class="nav-item"><a class="nav-link" href="/case-center">Case Center</a></li>
                            </ul>
                        </div>
                        <div class="navbar-right ml-auto">
                            <button class="btn btn-outline-primary">Menu <i class="fa fa-bars"></i></button>
                        </div>
                    </div>
                </nav>
            </header>

            <!-- Slider Section with Bootstrap Carousel -->
            <div id="ipmi-slider">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <!-- Carousel Items -->
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="/ipmi/static/src/img/badge1.jpg" alt="First slide" />
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/ipmi/static/src/img/badge2.jpg" alt="Second slide" />
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/ipmi/static/src/img/badge3.jpg" alt="Third slide" />
                        </div>
                    </div>
                    <!-- Carousel Controls -->
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>

            <!-- Custom Image Section -->
            <div id="custom-image" class="text-center py-4">
              
            </div>

            <div id="your-future" class="py-5">
                <div class="container text-center">
                    <!-- Title Section -->
                    <div class="future-title position-relative text-center mb-5">
                        <!-- "Discover" Circular Image -->
                        <img src="https://ipmi.ac.id/assets/images/discover.svg" alt="Discover" class="discover-image" />
                        <!-- Main Title Text -->
                        <h1 class="main-title">Your Future</h1>
                    </div>

                    <!-- The card section -->
                    <div class="row justify-content-center">
                        <!-- Alumni Network Card -->
                        <div class="col-md-3 col-sm-6 mb-4">
                            <div class="card h-100 d-flex flex-column justify-content-between shadow-sm">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title font-weight-bold">Alumni Network</h5>
                                    <p class="card-text flex-grow-1">Build your networking through your college experiences.</p>
                                    <a href="/alumni" class="btn btn-link text-primary p-0 align-self-start mt-auto">
                                        FIND OUT MORE <i class="fa fa-arrow-right ml-1"></i>
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Scholarships Card -->
                        <div class="col-md-3 col-sm-6 mb-4">
                            <div class="card h-100 d-flex flex-column justify-content-between shadow-sm">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title font-weight-bold">Scholarships</h5>
                                    <p class="card-text flex-grow-1">Find out about IPMI scholarships to support your education.</p>
                                    <a href="/scholarships" class="btn btn-link text-primary p-0 align-self-start mt-auto">
                                        FIND OUT MORE <i class="fa fa-arrow-right ml-1"></i>
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Executive Education Card -->
                        <div class="col-md-3 col-sm-6 mb-4">
                            <div class="card h-100 d-flex flex-column justify-content-between shadow-sm">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title font-weight-bold">Executive Education</h5>
                                    <p class="card-text flex-grow-1">Upgrade some competencies by following customized trainings and programs that meet specific needs of corporations.</p>
                                    <a href="/executive-education" class="btn btn-link text-primary p-0 align-self-start mt-auto">
                                        FIND OUT MORE <i class="fa fa-arrow-right ml-1"></i>
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Faculties Card -->
                        <div class="col-md-3 col-sm-6 mb-4">
                            <div class="card h-100 d-flex flex-column justify-content-between shadow-sm">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title font-weight-bold">Faculties</h5>
                                    <p class="card-text flex-grow-1">Explore programs, schools, centres, and faculty that make IPMI distinct than others.</p>
                                    <a href="/faculties" class="btn btn-link text-primary p-0 align-self-start mt-auto">
                                        FIND OUT MORE <i class="fa fa-arrow-right ml-1"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- jQuery Slim and Bootstrap JS -->
            <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-LtrjvnR4GearyE6Lv3F0u8pQstQIHN4FeBl5roJkZtXvgnujprW0hL38ysDmwp2K" crossorigin="anonymous"></script>
        </xpath>
    </template>
</odoo>
