      <div class="container">
        <div class="row align-items-center">
          <div class="col-4">
            <a href="/" class="logo">
              <img src="ipmi/static/src/img/ipmi_logo.png" alt="ipmi institute logo" />
            </a>
          </div>
          <div class="col-8">
            <nav class="main-nav">
              <ul class="nav-list">
                <li><a href="/admission">Admission</a></li>
